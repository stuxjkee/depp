<h1> Блог </h1>
<% @blogs.each do |blog| %>

  <div class="col-lg-5">
    <h2> <%= blog.title %></h2>

    <p> <%= strip_tags blog.html.html_safe.truncate(200) %> </p>
      <span class="text-muted"> <%= blog.created_at %></span>
    <%= link_to 'Більше...', blog, class: 'pull-right' %>
  </div>

<% end %>
<% if can? :create, Blog %>
  <p><%= link_to "Новий блог", new_blog_path, class: 'btn btn-primary' %></p>
<% end %>
